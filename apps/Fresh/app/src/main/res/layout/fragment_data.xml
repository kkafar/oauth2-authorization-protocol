<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.DataFragment"
        android:id="@+id/ConstraintLayout" >

    <TextView
            android:text="@string/nickname"
            android:layout_width="321dp"
            android:layout_height="52dp"
            android:id="@+id/nicknameDataTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/nicknameLabelTextView"
            android:layout_marginTop="26dp"
            app:layout_constraintBottom_toTopOf="@+id/refreshDataButton"
            app:layout_constraintVertical_bias="0.083" />

    <TextView
            android:text="@string/nickname"
            android:layout_width="209dp"
            android:layout_height="35dp"
            android:id="@+id/nicknameLabelTextView"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/emailDataTextView"
            android:layout_marginTop="60dp" />

    <TextView
            android:text="@string/email"
            android:layout_width="321dp"
            android:layout_height="52dp"
            android:id="@+id/emailDataTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/emailLabelTextView"
            android:layout_marginTop="26dp" />

    <TextView
            android:text="@string/email"
            android:layout_width="209dp"
            android:layout_height="35dp"
            android:id="@+id/emailLabelTextView"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/usernameDataTextView"
            android:layout_marginTop="60dp" />

    <TextView
            android:text="@string/username"
            android:layout_width="209dp"
            android:layout_height="35dp"
            android:id="@+id/usernameLabelTextView"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp"
            android:textSize="24sp" />

    <TextView
            android:text="@string/username"
            android:layout_width="321dp"
            android:layout_height="52dp"
            android:id="@+id/usernameDataTextView"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/usernameLabelTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:textSize="20sp" />

    <Button
            android:text="@string/logout"
            android:layout_width="144dp"
            android:layout_height="57dp"
            android:id="@+id/logoutButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:text="@string/refresh"
            android:layout_width="144dp"
            android:layout_height="57dp"
            android:id="@+id/refreshDataButton"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/logoutButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>